<!-- モーダル -->
<section id="modal" class="hidden">
  <div class="space-y-3">
    <!-- 画像表示用の要素 -->
    <%= image_tag @image, id: "modalImage", class: "hidden" %>
    <p class="text-center text-2xl font-bold">Congratulations!</p>
    <p class="text-center">
      <%= @goals_count_modal %>本目を獲得しました！
    </p>
    <div class="grid grid-cols-2 gap-2">
      <div id="close" class="btn flex justify-center items-center">
        閉じる
      </div>
      <!-- Xで共有ボタン -->
      <p class="text-center">
          <%= link_to "https://twitter.com/share?url=https://www.grow-journey.com&text=タスク達成#{@goals_count_modal}本目のお花は、#{@image_flower.flower_name}が咲きました！%0a%20%23GrowJourney%0a",
            target: '_blank',
            data: { toggle: "tooltip", placement: "bottom", turbo: false },
            title: "Xでシェア",
            class:"btn btn-secondary font-bold flex justify-center items-center" do %>
              <i class="fa-brands fa-square-x-twitter"></i>でシェア！
          <% end %>
      </p>
    </div>
  </div>
</section>
<div id="mask" class="hidden"></div>
