<% content_for(:title, t('.title')) %>
<%= render "modal" %>
<div class="container mx-auto py-12 text-center">
  <div class="mb-8">
    <h2 class="text-ms font-bold mb-2 text-secondary">目標達成で花が咲きました！</h2>
    <p class="text-xl border-secondary font-bold">あなたの花が咲いた数：<span class="text-5xl font-semibold"><%= @goals_count %></span>本</p>
  </div>

  <%= turbo_frame_tag Goal.new %>

  <div class="container mx-auto text-center">
    <%= link_to '新しい目標を追加', new_goal_path, class: 'btn btn-secondary mt-4 text-lg w-full max-w-lg', data: { turbo_frame: dom_id(Goal.new) } %>
  </div>
</div>
<div class="flex flex-wrap justify-center">
  <div class="card w-full max-w-lg mx-4 mb-8 shadow-2xl">
    <div class="card-body">
        <div class="font-bold text-center text-xl">目標</div>
        <% if @goals.present? %>
          <div id="goals">
            <%= turbo_frame_tag "goals" do %>
              <%= render @goals.select{ |g| g.is_goal? && !g.checked? } %>
            <% end %>
          </div>
        <% end %>
    </div>
  </div>
  <div class="card w-full max-w-lg mx-4 mb-8 shadow-2xl">
    <div class="card-body">
      <div class="font-bold text-center text-xl">タスク</div>
      <% if @goals.present? %>
        <div id="tasks">
          <%= turbo_frame_tag "tasks" do %>
            <%= render @goals.select{ |g| !g.is_goal? && !g.checked? }  %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>