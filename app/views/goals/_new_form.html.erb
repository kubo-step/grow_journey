<%= turbo_frame_tag goal do %>
  <div class="card max-w-lg mx-auto mb-3">
    <%= form_with model: goal, local: true do |f| %>
      <div class="p-4">
        <div class="mb-4">
          <label for="goal_content" class="font-semibold">目標またはタスク</label>
          <%= f.text_field :content, id: "goal_content", placeholder: "目標またはタスクを入力してください", class: 'w-full border rounded py-2 px-3' %>
        </div>

        <div class="mb-4">
          <label class="font-semibold">種別</label><br>
          <div class="flex justify-center">
            <div class="example">
              <label for="goal_type" class="mr-2">
                <%= f.radio_button :is_goal, true, id: "goal_type" %>
                目標
              </label>
              <label for="task_type">
                <%= f.radio_button :is_goal, false, id: "task_type" %>
                タスク
              </label>
            </div>
          </div>
        </div>

        <div class="mb-4">
          <label for="goal_category" class=" font-semibold">カテゴリー</label>
          <%= f.collection_select(:category_id, Category.all, :id, :name, { include_blank: "カテゴリーを選択してください" }, { id: "goal_category", class: 'w-full border rounded py-2 px-3' }) %>
        </div>

        <div class="mb-4">
          <label for="goal_deadline" class=" font-semibold">達成予定日</label>
            <%= f.datetime_field :deadline, id: "goal_deadline", class: 'w-full border rounded py-2 px-3' %>
            </div>
          </div>
        </div>

        <div class="text-center">
          <%= link_to "キャンセル", goal, class: "btn btn-outline-secondary px-3" %>
          <%= f.submit "登録", class: 'btn btn-secondary py-2 px-8 ml-2' %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>