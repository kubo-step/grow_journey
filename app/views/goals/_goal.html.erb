<div class="col-sm-12 col-lg-4 mb-3">
  <div id="goal-id-<%= goal.id %>">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">
          <a href="#">
            <%= goal.content %>
          </a>
        </h4>
        <div class='mr10 float-right'>
          <a href="#"><%= icon 'fas', 'trash', class: 'pr-1' %></a>
          <a href="#"><%= icon 'fa', 'pen' %></a>
        </div>
        <ul class="list-inline">
          <li class="list-inline-item">
            <%= icon 'far', 'user' %>
            <%= goal.user.name %>
          </li>
          <li class="list-inline-item">
            <%= icon 'far', 'calendar' %>
            <%= l goal.created_at, format: :long %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>