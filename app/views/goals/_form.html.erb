<div class="row mb-3">
  <div class="col-lg-8 offset-lg-2">
    <%= form_with model: goal, local: true do |f| %>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_field :content, class: 'form-control border border-black'%>
      </div>
      <p>カテゴリー</p>
      <div class="example">
        <%= f.collection_radio_buttons(:category_id, Category.order(:id), :id, :name)do |b| %>
            <%= b.radio_button(class: 'label') %>
            <%= b.label(class: 'label_name') %>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.label :deadline %>
        <%= f.date_field :deadline %>
      </div>
      <div class="form-group">
        <% f.label :is_goal %>
        <% f.check_box :is_goal, checked: true %>
      </div>
      <%= f.submit class: 'btn btn-secondary' %>
    <% end %>
  </div>
</div>