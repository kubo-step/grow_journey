<%= turbo_frame_tag "tab2_content" do %>
  <% if @tasks.present? %>
    <% @tasks.each do |task| %>
      <% if task.checked == false && task.due.to_date == Date.today %>
        <%= turbo_frame_tag "tab2_#{dom_id(task)}" do %>
          <%= render partial: "tasks/task", locals: { task: task, tab: "tab2" } %>
        <% end %>
      <% end %>
    <% end %>
  <% else %>
    <p class="text-center text-sm md:text-md mt-10 mb-20">
      <%= t("goals.index.task_comment") %>
    </p>
  <% end %>
<% end %>