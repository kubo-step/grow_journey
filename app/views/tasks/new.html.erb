<%= turbo_frame_tag "new_task_#{@goal.id}" do %>
  <div class="card max-w-full mb-3 p-4 rounded-lg border border-gray-300">
      <%= form_with model: [@goal, @task], local: true do |f| %>
        <div class="flex flex-col md:flex-row justify-between">
          <div class="flex-1 mb-2 md:mb-0 md:mr-2">
            <%= f.label :content, t(".content"), class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :content, id: "task_content", class: "form-input w-full border rounded-md", placeholder: "タスク" %>
          </div>

          <div class="mb-2 md:mb-0 md:mr-2">
            <%= f.label :due, t(".due"), class: "block text-sm font-medium text-gray-700" %>
            <%= f.date_field :due, id: "task_due", class: "form-input w-full border rounded-md" %>
          </div>

          <div class="flex justify-end md:flex-1">
            <%= link_to t("defaults.cancel"), goals_path, class: "btn mr-2 sm:btn-xs md:btn" %>
            <%= f.submit t("defaults.submit"), class: "btn btn-secondary sm:btn-xs md:btn-md" %>
          </div>
        </div>
      <% end %>
  </div>
<% end %>