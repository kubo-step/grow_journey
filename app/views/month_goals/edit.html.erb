<%= turbo_frame_tag "month_#{dom_id(@month_goal)}" do %>
  <div class="card max-w-full mb-3 p-4 rounded-lg border border-gray-300 bg-white shadow-sm">
    <%= form_with model: @month_goal, url: month_goal_path(@month_goal), method: :patch, local: true do |f| %>
      <div class="flex flex-col space-y-4">
        <div>
          <%= f.text_field :content, class: "w-full border border-gray-300 text-gray-600 rounded mt-2 p-3", placeholder: "タスク" %>
        </div>

        <div class="flex justify-end mt-4">
          <%= link_to t("defaults.cancel"), look_back_path, class: "btn mr-2 sm:btn-xs md:btn" %>
          <%= f.submit t("defaults.submit"), class: "btn btn-secondary sm:btn-xs md:btn-md" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
