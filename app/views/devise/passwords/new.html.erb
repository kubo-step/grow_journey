<% content_for(:title, t(".title"))%>
<div class="card w-full max-w-lg bg-base-100 shadow-xl mx-auto">
  <div class="card-body">
    <h1 class="card-title text-center my-8"><%= t("devise.passwords.new.title")%></h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-control">
        <%= f.label :email, class:"mb-4"%>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input input-primary w-full mb-3' %>
      </div>

      <div class="actions mb-4">
        <%= f.submit t("devise.passwords.new.send_me_reset_password_instructions") , class:"btn btn-secondary w-full"%>
      </div>
    <% end %>
    <div class="text-center text-sm">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
