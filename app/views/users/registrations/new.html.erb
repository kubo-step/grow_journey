<%= content_for :title, t('.title')%>
<div class="card w-full max-w-lg bg-base-100 shadow-xl mx-auto">
  <div class="card-body">
    <h1 class="card-title text-center"><%= t('.title') %></h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="form-control">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'input input-accent w-full mb-3 mt-1'%>
        </div>
        <div class="form-control">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input input-accent w-full mb-3 mt-1' %>
        </div>

        <div class="form-control">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'input input-accent w-full mb-3 mt-1' %>
        </div>

        <div class="form-control">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input input-accent w-full mb-3 mt-1' %>
        </div>

        <div class="text-center mt-10">
          <%= f.submit t('defaults.register'), class: 'btn btn-secondary w-full mb-5' %>
        </div>
      <% end %>
      <div class='text-center text-sm'>
        <%= render "users/shared/links" %>
      </div>
  </div>
</div>
