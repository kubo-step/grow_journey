<%= content_for :title, t('.title')%>
<div class="card w-full max-w-lg bg-base-100 shadow-xl mx-auto">
  <div class="card-body">
    <h1 class="card-title font-bold self-center mb-3"><%= t('.title') %></h1>
    <div class='text-center text-sm'>
      <%= button_to omniauth_authorize_path(resource_name, :line), class: "btn btn-md bg-line-green text-sm text-white", data: { turbo: false } do %>
        <%= image_tag "provider/line_logo.png", alt: "LINE", class: "inline-block mr-2", size:"25x25" %><%= t("devise.shared.links.sign_in_with_provider", provider: "LINE") %>
      <% end %>
    </div>
    <div class="divider">
      <div class="text-gray-500">OR</div>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="form-control">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'input input-primary w-full mb-3 mt-1'%>
      </div>
      <div class="form-control">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input input-primary w-full mb-3 mt-1' %>
      </div>

      <div class="form-control">
        <div class="flex items-center">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <div class="text-xs">（<%= @minimum_password_length %><%= t(".characters_minimum")%>）</div>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: 'input input-primary w-full mb-3 mt-1' %>
      </div>

      <div class="form-control">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input input-primary w-full mt-1' %>
      </div>

      <div class="text-center mt-5">
        <%= f.submit t('defaults.register'), class: 'btn btn-secondary w-full mb-5' %>
      </div>
    <% end %>
    <div class='text-center text-sm'>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
